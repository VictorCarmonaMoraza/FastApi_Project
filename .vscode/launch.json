{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app", // <--- Cambia 'main' si tu archivo tiene otro nombre
        "--reload",
        "--port",
        "8009"
      ],
      "jinja": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "cwd": "${workspaceFolder}", // 👈 ESTA LÍNEA ES CLAVE
      "console": "integratedTerminal"
    }
  ]
}
